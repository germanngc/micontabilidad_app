<?xml version='1.0' encoding='utf-8'?>
<widget id="mx.ninacode.micontabilidad" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mi Contabilidad</name>
    <description>
        An easy app that manage your day to day expenses.
    </description>
    <author email="soporte@ninacode.mx" href="https://www.ninacode.mx">
        El Equipo de Nina Code
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
